{% block workflow_view_attribute_row %}
    <div class="control-group">
        <label class="control-label">{{ label }}</label>
        <div class="controls">
            <p class="control-label">{{ oro_workflow_render_view_attribute_value(workflow_item, _context) }}</p>
        </div>
    </div>
{% endblock %}

{% block workflow_view_attribute_value %}
    {% if value is not empty %}
        {{ value }}
    {% endif %}
{% endblock %}

{% block string_workflow_view_attribute_value %}
    {% if value is not empty %}
        {{ value }}
    {% endif %}
{% endblock %}

{% block date_workflow_view_attribute_value %}
    {% if value is not empty %}
        {{ value|oro_format_date }}
    {% endif %}
{% endblock %}

{% block datetime_workflow_view_attribute_value %}
    {% if value is not empty %}
        {{ value|oro_format_datetime }}
    {% endif %}
{% endblock %}

{% block time_workflow_view_attribute_value %}
    {% if value is not empty %}
        {{ value|oro_format_time }}
    {% endif %}
{% endblock %}

{% block currency_workflow_view_attribute_value %}
    {% if value is not empty %}
        {% if currency_path is defined %}
            {% set currency = oro_workflow_get_value_by_path(workflow_item, currency_path) %}
        {% endif %}
        {{ value|oro_format_currency({currency: currency|default(null)}) }}
    {% endif %}
{% endblock %}

{% block decimal_workflow_view_attribute_value %}
    {% if value is not empty %}
        {{ value|oro_format_decimal }}
    {% endif %}
{% endblock %}

{% block percent_workflow_view_attribute_value %}
